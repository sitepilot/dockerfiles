#!/bin/bash

set -e

function log() {
    echo "$*"
}

if [ -n "${ADMIN_PASSWORD}" ]
then
	ENCRYPT_PASSWORD="$(/usr/local/lsws/admin/fcgi-bin/admin_php -q '/usr/local/lsws/admin/misc/htpasswd.php' "${ADMIN_PASSWORD}")"
	echo "admin:${ENCRYPT_PASSWORD}" >'/usr/local/lsws/admin/conf/htpasswd'
fi

/opt/runtime/init

exec "$@"
